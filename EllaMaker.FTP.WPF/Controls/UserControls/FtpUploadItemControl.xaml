<UserControl x:Class="EllaMaker.FTP.Controls.UserControls.FtpUploadItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Height="44" Width="400">
    <Grid>
        <ProgressBar BorderThickness="0" Background="{StaticResource WindowBackground}" Foreground="#f2f2f2"
                     x:Name="ProgressBar" Maximum="100" />
        <StackPanel Orientation="Horizontal">
            <Image Margin="12 0 0 0" Width="25" Height="25" Name="TypeIcon" />
            <Label Width="190" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Margin="6 0 0 0"
                   Name="FileNameLb" />
            <Label Width="80" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Name="FileSizelb" />
            <Border Margin="12 0 0 0" Width="18" Height="25" Name="StatusImg" Visibility="Hidden">
                <Border.Background>
                    <ImageBrush x:Name="bg" Stretch="Uniform" />
                </Border.Background>
            </Border>
        </StackPanel>
        <Border BorderThickness="0 0 0 1" BorderBrush="{StaticResource LineBrush}" />
    </Grid>
</UserControl>