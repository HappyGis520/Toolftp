    <Color x:Key="ItemSelectedColor">#d2e2ff</Color>
    <DropShadowEffect x:Key="WindowDropShadow" Color="#e3e3e3" BlurRadius="8" ShadowDepth="0" Direction="0" Opacity="0.7" />
    <SolidColorBrush x:Key="CaptionForeground" Color="White"></SolidColorBrush>
    <SolidColorBrush x:Key="BrowserFontSizeColor" Color="#9da0a3"></SolidColorBrush>
